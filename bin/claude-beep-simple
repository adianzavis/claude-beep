#!/usr/bin/expect -f

# Simple claude-beep test

set script_dir [file dirname [info script]]
set beep_cmd "$script_dir/beep"

# Get command line arguments
set claude_args [lrange $argv 0 end]

if {[llength $claude_args] == 0} {
    puts "Usage: claude-beep-simple [claude args]"
    exit 1
}

# Start claude
spawn claude {*}$claude_args

# Just pass everything through with no monitoring
interact